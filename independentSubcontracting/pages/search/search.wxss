/* 引入图标字体样式 */
@import '/static/iconfont/iconfont.wxss';
.searchContainer{
    padding:0 20rpx;
}

/* 顶部区域 */
.header{
    display:flex;
    height: 60rpx;
    padding:20rpx 0;
    line-height:60rpx;
    align-items:center;
    font-size:36rpx;
}
.searchInput{
    flex-grow:1;
    display:flex;
    align-items:center;
    background-color:rgb(237,237,237,.3)
}
.searchInput text{
    width: 50rpx;
    font-size:36rpx;
    padding:0 10rpx;
}
.searchInput input{
    flex-grow:1;
    height: 100%;
}
.header .cencel{
    width: 100rpx;
    text-align:center;
}


/* 搜索内容展示区域 */
.searchContent{
    font-size:30rpx;
    color:#d43c33;
    padding:20rpx 0;
    border-bottom:1rpx solid #d43c33;
}
.searchItem{
    display:flex;
    height: 80rpx;
    line-height:80rpx;
}
.searchItem .content{
    flex-grow:1;
    margin-left:20rpx;
    border-bottom:1rpx solid #ddd;
}


/* 搜索历史记录 */
.delete{
    position:relative;
    left:550rpx;
}
.historyList{
    display:flex;
    flex-wrap:wrap;
}
.historyItem{
    font-size:26rpx;
    padding:10rpx 20rpx;
    margin:10rpx 20rpx;
    border-radius:10rpx;
    background-color:#eee;
}


/* 热搜榜 */
.hotContainer .title{
    font-size:34rpx;
    padding-bottom:20rpx;
    border-bottom:1px solid #aaa;
}
/* 热搜列表 */
.hotList{
    display:flex;
    flex-wrap:wrap;
}
.hotItem{
    display:flex;
    align-items:center;
    width: 50%;
    height: 60rpx;
    line-height:60rpx;
}
.hotItem .order{
    margin:0 20rpx;
}
.hotItem .searchWord{
    display:block;
    white-space: nowrap;
    text-overflow:ellipsis;
    overflow:hidden;
}
.hotItem image{
    width: 35rpx;
    height: 20rpx;
    margin-left:10rpx;
}